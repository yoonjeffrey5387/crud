<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.agenda.MainController">

    <!-- Header -->
    <top>
        <VBox spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Agenda de Contactos" 
                       style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                <TextField fx:id="searchField" 
                          promptText="Buscar por nombre..." 
                          style="-fx-background-radius: 5; -fx-padding: 8;"
                          onKeyReleased="#onSearch"/>
            </HBox>
            
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button text="Nuevo" onAction="#onNew"
                       style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 8 15;"/>
                <Button text="Guardar" onAction="#onSave"
                       style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 8 15;"/>
                <Button text="Eliminar" onAction="#onDelete"
                       style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 8 15;"/>
                <Button text="Refrescar" onAction="#onRefresh"
                       style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 8 15;"/>
            </HBox>
        </VBox>
    </top>

    <!-- Contenido principal -->
    <center>
        <SplitPane dividerPositions="0.45" style="-fx-background-color: white;">
            <items>
                <!-- Panel izquierdo: Lista de personas -->
                <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15;">
                    <Label text="Lista de Personas" 
                           style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    
                    <TableView fx:id="personTable" 
                              prefHeight="500.0"
                              style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-radius: 5;">
                        <columns>
                            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                            <TableColumn fx:id="colNombre" text="Nombre" prefWidth="150"/>
                            <TableColumn fx:id="colEmail" text="Email" prefWidth="200"/>
                            <TableColumn fx:id="colTelefonos" text="Teléfonos" prefWidth="80"/>
                            <TableColumn fx:id="colDirecciones" text="Direcciones" prefWidth="90"/>
                        </columns>
                    </TableView>
                </VBox>

                <!-- Panel derecho: Edición -->
                <ScrollPane style="-fx-background-color: white;">
                    <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 15;">
                        
                        <!-- Información básica -->
                        <VBox spacing="10" style="-fx-background-color: #ecf0f1; -fx-padding: 15; -fx-background-radius: 8;">
                            <Label text="Información Personal" 
                                   style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                            
                            <GridPane hgap="10" vgap="8">
                                <columnConstraints>
                                    <ColumnConstraints percentWidth="25"/>
                                    <ColumnConstraints percentWidth="75"/>
                                </columnConstraints>
                                <rowConstraints>
                                    <RowConstraints/>
                                    <RowConstraints/>
                                    <RowConstraints/>
                                </rowConstraints>
                                <children>
                                    <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"
                                           style="-fx-font-weight: bold;"/>
                                    <Label fx:id="lblId" text="-" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                                    <Label text="Nombre:" GridPane.rowIndex="1" GridPane.columnIndex="0"
                                           style="-fx-font-weight: bold;"/>
                                    <TextField fx:id="nombreField" 
                                              promptText="Nombre completo" 
                                              GridPane.rowIndex="1" GridPane.columnIndex="1"
                                              style="-fx-background-radius: 5; -fx-padding: 8;"/>

                                    <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0"
                                           style="-fx-font-weight: bold;"/>
                                    <TextField fx:id="emailField" 
                                              promptText="correo@ejemplo.com" 
                                              GridPane.rowIndex="2" GridPane.columnIndex="1"
                                              style="-fx-background-radius: 5; -fx-padding: 8;"/>
                                </children>
                            </GridPane>
                        </VBox>

                        <!-- Gestión de teléfonos -->
                        <VBox spacing="10" style="-fx-background-color: #e8f5e8; -fx-padding: 15; -fx-background-radius: 8;">
                            <Label text="Teléfonos" 
                                   style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #27ae60;"/>
                            
                            <HBox spacing="10">
                                <TextField fx:id="telefonoField" 
                                          promptText="Número de teléfono" 
                                          style="-fx-background-radius: 5; -fx-padding: 8;"/>
                                <Button text="Agregar" onAction="#onAddPhone"
                                       style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 8 15;"/>
                                <Button text="Quitar" onAction="#onRemovePhone"
                                       style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 8 15;"/>
                            </HBox>
                            
                            <ListView fx:id="telefonosList" 
                                     prefHeight="100.0"
                                     style="-fx-background-color: white; -fx-border-color: #27ae60; -fx-border-radius: 5;"/>
                        </VBox>

                        <!-- Gestión de direcciones -->
                        <VBox spacing="10" style="-fx-background-color: #fff3e0; -fx-padding: 15; -fx-background-radius: 8;">
                            <Label text="Direcciones" 
                                   style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #f39c12;"/>
                            
                            <!-- Campos para nueva dirección -->
                            <GridPane hgap="10" vgap="8">
                                <columnConstraints>
                                    <ColumnConstraints percentWidth="25"/>
                                    <ColumnConstraints percentWidth="75"/>
                                </columnConstraints>
                                <rowConstraints>
                                    <RowConstraints/>
                                    <RowConstraints/>
                                    <RowConstraints/>
                                    <RowConstraints/>
                                    <RowConstraints/>
                                </rowConstraints>
                                <children>
                                    <Label text="Calle:" GridPane.rowIndex="0" GridPane.columnIndex="0"
                                           style="-fx-font-weight: bold;"/>
                                    <TextField fx:id="calleField" 
                                              promptText="Calle y número" 
                                              GridPane.rowIndex="0" GridPane.columnIndex="1"
                                              style="-fx-background-radius: 5; -fx-padding: 8;"/>

                                    <Label text="Ciudad:" GridPane.rowIndex="1" GridPane.columnIndex="0"
                                           style="-fx-font-weight: bold;"/>
                                    <TextField fx:id="ciudadField" 
                                              promptText="Ciudad" 
                                              GridPane.rowIndex="1" GridPane.columnIndex="1"
                                              style="-fx-background-radius: 5; -fx-padding: 8;"/>

                                    <Label text="Estado:" GridPane.rowIndex="2" GridPane.columnIndex="0"
                                           style="-fx-font-weight: bold;"/>
                                    <TextField fx:id="estadoField" 
                                              promptText="Estado" 
                                              GridPane.rowIndex="2" GridPane.columnIndex="1"
                                              style="-fx-background-radius: 5; -fx-padding: 8;"/>

                                    <Label text="C.P.:" GridPane.rowIndex="3" GridPane.columnIndex="0"
                                           style="-fx-font-weight: bold;"/>
                                    <TextField fx:id="codigoPostalField" 
                                              promptText="Código Postal" 
                                              GridPane.rowIndex="3" GridPane.columnIndex="1"
                                              style="-fx-background-radius: 5; -fx-padding: 8;"/>

                                    <Label text="País:" GridPane.rowIndex="4" GridPane.columnIndex="0"
                                           style="-fx-font-weight: bold;"/>
                                    <TextField fx:id="paisField" 
                                              promptText="País" 
                                              GridPane.rowIndex="4" GridPane.columnIndex="1"
                                              style="-fx-background-radius: 5; -fx-padding: 8;"/>
                                </children>
                            </GridPane>
                            
                            <HBox spacing="10">
                                <Button text="Agregar Dirección" onAction="#onAddAddress"
                                       style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 8 15;"/>
                                <Button text="Quitar Dirección" onAction="#onRemoveAddress"
                                       style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 8 15;"/>
                            </HBox>
                            
                            <ListView fx:id="direccionesList" 
                                     prefHeight="120.0"
                                     style="-fx-background-color: white; -fx-border-color: #f39c12; -fx-border-radius: 5;"/>
                        </VBox>
                    </VBox>
                </ScrollPane>
            </items>
        </SplitPane>
    </center>

    <!-- Barra inferior -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #34495e; -fx-padding: 10;">
            <Label text="Agenda CRUD Jeffrey Yoon 1196854" 
                   style="-fx-text-fill: white; -fx-font-size: 12px;"/>
        </HBox>
    </bottom>
</BorderPane>